<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/textviewMax"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textviewNumber"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edittextMax"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="17dp"
        android:text="0"
        android:textAlignment="center"
        android:textSize="24dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonRandom"
        android:layout_width="229dp"
        android:layout_height="36dp"
        android:layout_below="@+id/textviewNumber"
        android:layout_alignParentStart="true"
        android:layout_marginStart="98dp"
        android:layout_marginTop="15dp"
        android:text="quay số "
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edittextMin"
        android:layout_width="372dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="13dp"
        android:ems="10"
        android:hint="Nhập số nhỏ nhất"
        android:inputType="number" />

    <EditText
        android:id="@+id/edittextMax"
        android:layout_width="371dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edittextMin"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="14dp"
        android:ems="10"
        android:hint="Max"
        android:inputType="number" />

</RelativeLayout>
